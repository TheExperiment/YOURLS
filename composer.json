{
  "name": "yourls/yourls",
  "description": "Your Own URL Shortener",
  "keywords": [
    "shortener",
    "short url",
    "url",
    "bitly"
  ],
  "homepage": "http://yourls.org",
  "license": "MIT",
  "authors": [
    {
      "name": "YOURLS",
      "role": "Community"
    },
    {
      "name": "Ozh Richard",
      "homepage": "http://ozh.org",
      "role": "Developer"
    },
    {
      "name": "Leo Colombaro",
      "homepage": "http://colombaro.fr",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "pomo/pomo": "~1.2",
    "rmccue/requests": "~1.6",
    "hautelook/phpass": "~0.3",
    "monolog/monolog": "~1.10",
    "nesbot/carbon": "~1.9",
    "jwage/purl": "~0.0.3",
    "jv2222/ezsql": "dev-master"
  },
  "require-dev": {
    "filp/whoops": "~1.1",
    "phpunit/phpunit": ">=4.0",
    "codeclimate/php-test-reporter": "dev-master"
  },
  "suggest": {
    "lib-curl": "Allow API external transactions",
    "lib-openssl": "Allow HTTPS connexions"
  },
  "autoload": {
    "psr-4": { "YOURLS\\": "includes/YOURLS" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  },
  "config": {
    "vendor-dir": "includes/vendor",
    "optimize-autoloader": true
  }
}
